{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple donut chart with embedded data.",
  "data": {
    "url": "https://raw.githubusercontent.com/joeechua/FIT3179_A2/main/fortune_500_USA.csv",
    "format": {"parse": {"profits": "number"}}
  },
  "width": 650,
  "height": 50,
  "background": null,
  "params": [
    {
      "name": "year_selection",
      "bind": {
        "input": "select",
        "options": ["2019", "2020", "2021"],
        "labels": ["2019", "2020", "2021"],
        "name": "Select Year: "
      },
      "value": "2019"
    }
  ],
  "transform": [
    {"filter": "year_selection == null || year_selection == datum.year"},
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "profits", "order": "descending"}]
    },
    {"filter": "datum.rank <= 10"}
  ],
  "encoding": {
    "order": {"field": "profits", "type": "quantitative", "sort": "descending"},
    "theta": {
      "field": "profits",
      "type": "quantitative",
      "stack": true,
      "scale": {"type": "linear", "rangeMax": 0.02, "rangeMin": -3.18}
    },
    "color": {
      "field": "sector",
      "type": "nominal",
      "legend": {
        "title": "Sector",
        "titleFontSize": 13,
        "labelFontSize": 12,
        "titleLimit": 1000,
        "titlePadding": 10,
        "labelOffset": 13,
        "orient": "none",
        "legendX": 0,
        "legendY": -280
      },
      "scale": {
        "domain": [
          "Energy",
          "Technology",
          "Telecommunications",
          "Financials",
          "Retailing"
        ],
        "range": ["#F01523", "#A2AAAD", "#00A8E0", "#211E1E", "#FF9900"]
      }
    }
  },
  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 260, "outerRadius": 190},
      "encoding": {
        "opacity": {"value": 0.78},
        "stroke": {"value": "black"},
        "tooltip": [
          {"field": "name", "type": "ordinal", "title": "Company"},
          {
            "field": "employees",
            "type": "quantitative",
            "title": "Number of Employees"
          },
          {"field": "year", "type": "nominal", "title": "Year Listed"}
        ]
      }
    },
    {
      "mark": {
        "type": "image",
        "url": "https://joeechua.github.io/FIT3179_A2/images/apple.png",
        "width": 40,
        "height": 40,
        "x": 300,
        "y": 295
      },
      "encoding": {
        "opacity": {"value": {"expr": "year_selection == 2019 ? 1:0"}}
      }
    },
    {
      "mark": {
        "type": "image",
        "url": "https://joeechua.github.io/FIT3179_A2/images/JP-Morgan-Chase-Logo.png",
        "width": 90,
        "height": 85,
        "x": 150,
        "y": 210
      },
      "encoding": {
        "opacity": {"value": {"expr": "year_selection == 2019 ? 1:0"}}
      }
    },
    {
      "mark": {
        "type": "image",
        "url": "https://joeechua.github.io/FIT3179_A2/images/alphabet.png",
        "width": 95,
        "height": 95,
        "x": 105,
        "y": 120
      },
