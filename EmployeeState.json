{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "A simple radial chart with embedded data.",
  "data": {
    "url": "https://raw.githubusercontent.com/joeechua/FIT3179_A2/main/fortune_500_USA.csv",
    "format": {"parse": {"employees": "number"}}
  },
  "width": 40,
  "height": 520,
  "background": null,
  "params": [
    {
      "name": "year_selection",
      "bind": {
        "input": "select",
        "options": ["2019", "2020", "2021"],
        "labels": ["2019", "2020", "2021"],
        "name": "Select Year: "
      },
      "value": "2019"
    }
  ],
  "encoding": {
    "order": {
      "field": "employees",
      "type": "quantitative",
      "sort": "ascending"
    },
    "theta": {
      "field": "employees",
      "type": "quantitative",
      "stack": true,
      "scale": {"type": "linear", "rangeMax": 3.14, "rangeMin": -0.01}
    },
    "radius": {
      "field": "employees",
      "scale": {"type": "sqrt", "zero": true, "rangeMin": 120}
    },
    "color": {
      "field": "hqstate",
      "type": "nominal",
      "legend": {
        "title": "State",
        "titleFontSize": 18,
        "labelFontSize": 15,
        "titleLimit": 1000,
        "titlePadding": 10,
        "labelOffset": 13,
        "orient": "none",
        "legendX":330,
        "legendY": 205,
        "columns": 3
      },
      "scale": {
        "domain": [
          "Arkansas",
          "District Of Columbia",
          "Georgia",
          "Minnesota",
          "Nebraska",
          "New York",
          "Ohio",
          "Tennessee",
          "Washington"
        ],
        "range": [
          "#004c91",
          "black",
          "#ee7125",
          "#E80018",
          "#2d2d94",
          "#006699",
          "#0468b3",
          "#FF6600",
          "#FF9900"
        ]
      }
    }
  },
  "transform": [
    {"filter": "year_selection == null || year_selection == datum.year"},
    {
      "window": [{"op": "rank", "as": "rank"}],
      "sort": [{"field": "employees", "order": "descending"}]
    },
    {"filter": "datum.rank <= 10"}
  ],
  "layer": [
    {
      "mark": {"type": "arc", "innerRadius": 260, "stroke": "black"},
      "encoding": {
        "opacity": {"value": 0.8},
        "tooltip": [
          {"field": "name", "type": "ordinal", "title": "Company"},
          {
            "field": "employees",
            "type": "quantitative",
            "title": "Number of Employees"
          },
          {"field": "year", "type": "nominal", "title": "Year Listed"},
          {"field": "sector", "type": "nominal", "title": "Sector"},
          {"field":"hqstate"}
        ]
      }
    }
  ]
}