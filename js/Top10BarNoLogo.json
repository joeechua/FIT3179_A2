{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/joeechua/FIT3179_A2/main/data/fortune_500_USA.csv",
    "format": {"parse": {"revenues": "number"}}
  },
  "width": "container",
  "height": 450,
  "params": [
    {
      "name": "year_selection",
      "bind": {
        "input": "select",
        "options": ["2019", "2020", "2021"],
        "labels": ["2019", "2020", "2021"],
        "name": "Select Year: "
      },
      "value": "2019"
    }
  ],
  "transform": [
    {
      "window": [{"op": "rank", "as": "ranks"}],
      "sort": [{"field": "revenues", "order": "descending"}],
      "ignorePeers": true,
      "groupby": ["year"]
    },
    {"filter": "datum.ranks <= 10"},
    {"filter": "datum.year == year_selection"},
    {"calculate": "datum.revenues", "as": "prof_mil"}
  ],
  "encoding": {
    "y": {
      "field": "name",
      "type": "ordinal",
      "axis": {
        "domain": false,
        "labels": false,
        "title": null,
        "ticks": false,
        "grid": false
      },
      "sort": {"encoding": "x", "order": "descending"}
    },
    "x": {
      "field": "revenues",
      "type": "quantitative",
      "axis": {
        "domain": false,
        "labels": false,
        "title": null,
        "ticks": false,
        "grid": false
      },
      "stack": null
    }
  },
  "layer": [
    {
      "mark": {"type": "bar"},
      "encoding": {
        "opacity": {"value": 0.88},
        "stroke": {"value": "black"},
        "tooltip":[
          {"field":"revenues", "type": "quantitative", "title": "Revenue (Million Dollars)", "format":"$0.f"},
          {"field":"sector", "type": "nominal", "title": "Sector"},
          {"field":"name", "type": "nominal", "title": "Sector"}
        ],
        "color": {
          "field": "name",
          "type": "nominal",
          "legend": null,
          "scale": {
            "domain": [
              "AT&T",
              "Alphabet",
              "Apple",
              "Exxon Mobil",
              "Intel",
              "JPMorgan Chase",
              "Berkshire Hathaway",
              "Microsoft",
              "Amazon",
              "Walmart",
              "UnitedHealth Group",
              "McKesson",
              "CVS Health",
              "AmerisourceBergen"
            ],
            "range": [
              "#00A8E0",
              "#F01716",
              "#A2AAAD",
              "#F01523",
              "#0071c5",
              "#211E1E",
              "#2D2D94",
              "#F34F1C",
              "#FF9900",
              "#004c91",
              "#1e3d6a",
              "#174EA0",
              "#CC0000",
              "#00509D"
            ]
          }
        }
      }
    },
    {
      "mark": {"type": "text", "align": "left", "baseline": "middle", "dx": 5},
      "encoding": {
        "color": {"value": "black"},
        "text": {"field": "prof_mil", "format": "$.2s", "type": "quantitative"}
      }
    },
    {
      "mark": {
        "type": "text",
        "color": "white",
        "align": "right",
        "dx": -8,
        "fontSize": 10.5
      },
      "encoding": {"text": {"field": "name", "type": "nominal"}}
    }
  ]
}